<!DOCTYPE html>
<html>
  <head>
    <title>Classroom Dashboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">

      <div class="container">

        <ul class="nav navbar-nav">
          <% if admin_signed_in? %>
            <li><%= link_to "SIGN OUT", destroy_admin_session_path, method: :delete %></li>
          <% else %>
            <li><%=link_to "SIGN UP", new_admin_registration_path %></li>
            <li><%= link_to "LOGIN", new_admin_session_path%></li>
          <% end %>
        </ul>

        <div class="navbar-header">
          <%= link_to "CLASSROOM DASHBOARD", root_path, class: "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <!-- deleted user sign in check (see above)  -->
          <% if admin_signed_in? %>
            <li><%= link_to "ADD COURSE SECTION", new_section_path %></li>
          <% end %>

        </ul>
      </div>
    </nav>

    <!-- Will give us notice if login/logout was sucessful or not
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    -->
    <%= yield %>
  </body>
</html>
