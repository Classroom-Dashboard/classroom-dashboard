<!-- Content that is displayed when a Section is clicked on -->
<!-- show's section's attributes, students, add student functionality, and edit/delete course functionality -->
<nav class="navbar navbar-default">
	<div class="container">

    <ul class="nav navbar-nav navbar-left">
      <a href="#"><%= link_to "Flashcards", section_flashcards_path(@section)%></a>
      <a href="#"><%= link_to "Memory Game", section_quiz_path(@section)%></a>
    </ul>

		<div class="navbar-header">
      <%= link_to @section.course + " " + @section.semester, section_path, class: "navbar-brand" %>
      <!-- <h1>
          <%= @section.course %>
          <%= @section.semester %>
      </h1> -->
    </div>

		<ul class="nav navbar-nav navbar-right">
      <div style="text-align:right">
        <p class = add_student><%= link_to "Add Student", new_section_student_path(@section)%></p>
      </div>
    </ul>
	</div>
</nav>


<!-- Display section information -->


<!-- Ability to add a student to a section -->
<div style="text-align:center">
    <p class = edit_section_link><%= link_to "Edit/Delete Section", edit_section_path(@section)%></p>
</div></p>



<table>
  <tr>
    <th>Students</th>
    <th></th>
    <th></th>
  </tr>

<% @section.students.each do |student|%>
  <% if student != nil then %>
    <tr>
      <td><%= image_tag student.student_img.url(:student_index)%></td>
      <td><%= link_to student.firstName + " " + student.lastname, section_student_path(student.section_id, student) %></td>
      <td><%= link_to "Edit/Delete", edit_section_student_path(student.section_id, student) %></td>
    </tr>
  <% end %>
<% end %>
</table>

